{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2022"],
    "rootDir": "src/lib",
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test-setup.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "jest.config.ts"
  ],
  "include": ["src/lib/index.ts"]
}
