{
  "name": "@ng-atomic/schematics-x",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/@ng-atomic/schematics-x/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/@ng-atomic/schematics-x",
        "tsConfig": "packages/@ng-atomic/schematics-x/tsconfig.lib.json",
        "packageJson": "packages/@ng-atomic/schematics-x/package.json",
        "main": "packages/@ng-atomic/schematics-x/src/index.ts",
        "assets": [
          "packages/@ng-atomic/schematics-x/*.md",
          {
            "input": "./ng-atomic/schematics-x/src",
            "glob": "**/*.!(ts)",
            "output": "./src"
          },
          {
            "input": "./ng-atomic/schematics-x",
            "glob": "collection.json",
            "output": "."
          }
        ],
        "srcRootForCompilationRoot": "packages/@ng-atomic/schematics-x",
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/@ng-atomic/schematics-x/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/ng-atomic/schematics-x"],
      "options": {
        "jestConfig": "packages/@ng-atomic/schematics-x/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": ["npm publish --access=public"],
        "cwd": "dist/packages/@ng-atomic/schematics-x"
      }
    },
    "link": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": ["npm link"],
        "cwd": "dist/packages/@ng-atomic/schematics-x"
      }
    }
  },
  "tags": [
    "@ng-atomic:private"
  ]
}
