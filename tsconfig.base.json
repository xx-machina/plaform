{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@platform/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@nx-ddd/common": ["libs/common/src/index.ts"],
      "@nx-ddd/common/*": ["libs/common/src/*"],
      "@nx-ddd/firestore": ["libs/firestore/src/index.ts"],
      "@nx-ddd/firestore/*": ["libs/firestore/src/*"],
      "@nx-ddd/domain": ["libs/domain/src/index.ts"],
      "@nx-ddd/infrastructure": ["libs/infrastructure/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
