{
  "name": "firestore",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/firestore/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/firestore",
        "tsConfig": "libs/firestore/tsconfig.lib.json",
        "packageJson": "libs/firestore/package.json",
        "rootDir": "libs/firestore/src/lib",
        "main": "libs/firestore/src/lib/index.ts",
        "assets": ["libs/firestore/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/firestore/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/firestore"],
      "options": {
        "jestConfig": "libs/firestore/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
